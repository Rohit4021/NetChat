<style>
    @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css");
    * {
        margin: 0;
        padding: 0;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }

    body {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    svg {
        margin-left: -40px;
        vertical-align: middle;
        cursor: pointer;
    }

    svg:hover {
        /*background-color: #c7c6c6;*/
        border-radius: 50%;
        background-color: rgba(0, 0, 0, 0.08);
    }

    #container {
        width: 100%;
        height: 100vh;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to right, black, #282626);
    }

    #textColor {
        background: linear-gradient(to right, #8d68c5, #e34494);
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
        clear: both;
    }

    form {
        /*border: solid white;*/
        margin-bottom: auto;
        /*padding: 20px;*/
        align-items: center;
        justify-content: center;
        display: flex;
        position: relative;
        flex-direction: column;
        width: 100%;
        height: 100%;
    }

    input {
        border-radius: 10px;
        padding: 15px;
        display: inline-block;
        margin: 2px;
        height: 18px;
        width: 350px;
        color: black;
        -webkit-text-fill-color: black;
        outline: none;
        border: none;
        font-size: 18px;
        font-family: "Times New Roman", serif;
    }

    label {
        display: block;
        font-size: 22px;
        margin: 2px;
        color: #00ffff;
    }

    input[type="submit"], input[type="button"] {
        margin-top: 15px;
        height: 50px;
        width: 100px;
        font-size: 20px;
        text-align: center;
        cursor: pointer;
        background-color: white;
    }

    .alert {
        position: relative;
        padding: 0.5rem 1rem;
        margin-bottom: 0.2rem;
        margin-top: 0.5rem;
        border: 1px solid transparent;
        border-radius: 0.25rem;
    }

    .alert-danger {
        color: #c20404;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }


    @media screen and (min-width: 700px){
        input[type="submit"]:hover, input[type="button"]:hover {
            color: red;
            background-color: #ececec;
        }
        /*input {*/
        /*    width: 250px;*/
        /*}*/
        #container{
            bottom: 0;
        }
    }

    @media screen and (max-width: 700px){
        input[type="submit"]:active, input[type="button"]:active {
            color: red;
            background-color: #ececec;
        }
        input {
            width: 300px;
        }
        #container {
            bottom: auto;
            /*position: absolute;*/
        }
    }
</style>
